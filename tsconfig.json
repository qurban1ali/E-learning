{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",          // ✅ all source files in the current app folder
    "outDir": "./build"       // ✅ compiled JS will go here
  },
  "include": ["**/*"]         // ✅ include all TS files
}
